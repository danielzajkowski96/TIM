<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/folders_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/folder_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/learning_materials_item_imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_folder_foreground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/learning_materials_item_name_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:text="@string/title_folders_folder_name"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/learning_materials_item_date_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="5dp"
                    android:text="@string/title_folders_folder_date"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!--<CheckBox-->
        <!--android:id="@+id/learning_materials_item_checkBox"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:buttonTint="@color/colorPrimary"-->
        <!--android:focusable="false" />-->

        <ImageView
            android:id="@+id/learning_materials_item_settings"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:focusable="false"
            android:src="@drawable/ic_more_vert_foreground"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>



